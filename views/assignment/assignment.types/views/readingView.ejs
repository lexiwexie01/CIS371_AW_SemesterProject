<!-- Alexis Webster -->

<html>

<head>
    <style>
        .label {
            display: inline-block;
            width: 6em;
            font-weight: bold;
        }
        .padding {
            height: 10px;
        }
    </style>
</head>

<body>

    <%
        let today = new Date();
        let due = new Date(assignment.dueDate);
        let amtTime = due.getTime() - today.getTime();
        let daysTillDue = Math.ceil(amtTime / (1000 * 3600 * 24));
        let pagesPerDay = 0;
        let numExtra = 0;

        if (assignment.pages % daysTillDue === 0) {
            pagesPerDay = assignment.pages / daysTillDue;
        } else {
            pagesPerDay = Math.floor(assignment.pages / daysTillDue);
            numExtra = assignment.pages % daysTillDue;
        }
    %>

    <div class="padding"></div>

    <span><span class='label'>Assignment ID</span>
    <%= assignment.aid %>
        </span><br>

        <div class="padding"></div>

        <span><span class='label'>Type</span>
        Reading
            </span><br>

        <div class="padding"></div>

        <span><span class='label'>Name</span>
        <%= assignment.name %>
            </span><br>

                <div class="padding"></div>

                <span><span class='label'>Due Date:</span>
                <%= assignment.dueDate %>
                    </span><br>

                    <div class="padding"></div>

                    <span><span class='label'>Days Left:</span>
                    <%= daysTillDue %>
                        </span><br>

                    <div class="padding"></div>

                    <span><span class='label'>Number of Pages:</span>
                <%= assignment.pages %>
                    </span><br>

                    <div class="padding"></div>

                    <h2>Reading Plan:</h2>
                
                    <div class="padding"></div>

                    <span><span class='label'>Read this many pages per day:</span>
                    <%= pagesPerDay %> page(s)
                    </span><br>

                    <div class="padding"></div>

                    <% if (numExtra > 0) { %>
                        <span><span class='label'> On the last day read:</span>
                        <%= numExtra %> extra page(s).
                        </span><br>
                    <% } %>
                    
                    <div class="padding"></div>
                    
                    <p>
                        <a href="/assignment-scheduler/<%= assignment.userId %>/assignments">Back</a>
                    </p>

                    <p>
                        <a href="/assignment-scheduler/<%= assignment.userId %>/assignments/<%= assignment.aid %>/edit">Edit Reading</a>
                        <a href="/assignment-scheduler/<%= assignment.userId %>/assignments/<%= assignment.aid %>/delete">Delete Reading</a>
                    </p>
</body>

</html>