<% 
    submitLabel = "Delete User";
%>
<html>
<head>
    <style>
        .label {
            display: inline-block;
            width: 6em;
            font-weight: bold;
        }
        .padding {
            height: 10px;
        }
    </style>
</head>

<body>

    <form accept-charset="UTF-8" method="post">
    <h3>Are you sure you want to delete this user?</h3>

    <div class="padding"></div>

    <span><span class='label'>First Name:</span>
    <%= user.fname %>
        </span><br>

        <div class="padding"></div>

        <span><span class='label'>Last Name:</span>
        <%= user.lname %>
            </span><br>

            <div class="padding"></div>

            <span><span class='label'>Email:</span>
            <%= user.email %>
                </span><br>

                <div class="padding"></div>

                    <div class="actions">
                        <input type="submit" name="commit" value="<%= submitLabel %>" />
                    </div>
                    <p>
                        <a href="/users">Back</a>
                    </p>
</form>

</body>

</html>